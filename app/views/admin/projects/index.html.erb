<% page_title("Projects Admin") %>
<h1>Projects <small>Admin</small></h1>
<p><%= link_to "Back to Admin", admin_root_path %></p>

<div class="text-center">
  <p><%= page_entries_info @projects, :entry_name => 'project' %></p>
  <%= paginate @projects %>
</div>

<%= form_tag admin_projects_path, method: 'get', html: {role: "form"} do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], class: "form-control-inline" %>
      <%= submit_tag "Search", :name => nil, class: "btn btn-sm btn-primary form-button-inline" %>
      <%= link_to "All", admin_projects_path, {class: "btn btn-sm btn-link"} %>
    </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Editor pick</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, edit_admin_project_path(project) %></td>
        <td><%= project.owner.email %></td>
        <td><%= project.editor_pick %></td>
        <td><%= link_to 'Show', [:admin, project] %></td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
        <%#td>< %= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } % ></td%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_admin_project_path %>

<div class="text-center">
  <p><%= page_entries_info @projects, :entry_name => 'project' %></p>
  <%= paginate @projects %>
</div>
