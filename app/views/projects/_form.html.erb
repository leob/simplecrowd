<%= form_for(@project, role: "form") do |f| %>
    <%= form_errors @project %>

    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", :autofocus => true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit nil, class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
