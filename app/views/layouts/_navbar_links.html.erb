<li>
  <%= nav_link("projects", projects_path) %>
</li>

<li>
  <%= nav_link("how_it_works", how_it_works_path) %>
</li>

<% if user_signed_in? %>

    <li class="dropdown">
      <a href="#" data-toggle="dropdown" class="dropdown-toggle navlink-small"><%= current_user.email %></a>

      <ul class="dropdown-menu">
        <li><%= nav_link("user_settings", nil) %></li>
        <li><%= nav_link("user_projects", nil) %></li>
<% if current_user.admin? %>
        <li><%= nav_link("admin_dashboard", admin_root_path) %></li>
<% end %>
        <li><%= nav_link("sign_out", destroy_user_session_path, data: {method: :delete}) %></li>
      </ul>
    </li>

<% else %>

    <li>
      <%= nav_link("sign_in", new_user_session_path, class: "navlink-small") %>
    </li>

<% end %>

<%=
    content_tag(:li) do
       nav_link("NL", '/', class: "navlink-small " + (current_locale == 'nl' ? "text-disabled " : "" ) + "navlink-justright") +

           content_tag(:span, class: "navlink-small navlink-justleft navlink-justright") do
              "/"
           end +

           nav_link("EN", '/en', class: "navlink-small " + (current_locale == 'en' ? "text-disabled " : "" ) + "navlink-justleft")
    end
%>
